<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".s065.LoginActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/home"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="會員登入"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:background="@color/color"
        android:gravity="center"
        />

    <!--<Button-->
    <!--android:id="@+id/movie_btne"-->
    <!--android:layout_width="80dp"-->
    <!--android:layout_height="100dp"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:background="@drawable/up_btn_home"/>-->


    <EditText
        android:id="@+id/ed_email"
        android:hint="email"
        android:inputType="text"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:background="@color/colorWhite"/>

    <EditText
        android:id="@+id/ed_password"
        android:hint="password"
        android:password="true"
        android:inputType="text"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="260dp"
        android:background="@color/colorWhite"/>

    <Button
        android:id="@+id/btn_forgetpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/login_with_facebook"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:text="忘記密碼"/>


    <Button
        android:id="@+id/btn_login"
        android:textSize="20dp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:onClick="btnUserLogin_Click"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/ed_password"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:text="登入"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="建立帳號"
        android:layout_below="@+id/login_with_facebook"
        android:layout_alignLeft="@+id/ed_password"
        android:layout_alignStart="@+id/ed_password" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/up_btn_home"
        android:gravity="center"
        android:padding="4dp"
        android:layout_alignBottom="@+id/home" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/login_with_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_with_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/login_with_google"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/button_view_include"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

    </LinearLayout>

</RelativeLayout>