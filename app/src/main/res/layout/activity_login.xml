<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80DEEA"
    tools:context=".s065.LoginActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/home"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="會員登入"
        android:textColor="#000"
        android:textSize="20dp"
        android:background="#fff"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/ed_email"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_above="@+id/ed_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/login_img_pass"
        android:gravity="center"
        android:hint="email"
        android:inputType="text"
        android:singleLine="true" />

    <EditText
        android:id="@+id/ed_password"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/login_3"
        android:gravity="center"
        android:hint="password"
        android:inputType="text"
        android:password="true"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_forgetpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_login"
        android:layout_below="@+id/btn_login"
        android:background="#00000000"
        android:text="忘記密碼>>"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ed_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="#3dd2db"
        android:onClick="btnUserLogin_Click"
        android:text="登入"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_login"
        android:layout_below="@+id/btn_login"
        android:autoLink="none"
        android:autoText="true"
        android:background="#00000000"
        android:editable="false"
        android:elegantTextHeight="false"
        android:elevation="0dp"
        android:text="建立帳號>>"
        android:textColor="#ffff" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back"
        android:gravity="center"
        android:padding="4dp"
        android:layout_alignBottom="@+id/home" />

    <!--<com.google.android.gms.common.SignInButton-->
        <!--android:id="@+id/login_with_google"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="45dp"-->
        <!--android:layout_below="@+id/btn_login"-->
        <!--android:layout_centerHorizontal="true" />-->

    <!--<com.facebook.login.widget.LoginButton-->
    <!--android:id="@+id/login_with_facebook"-->
    <!--android:layout_width="200dp"-->
    <!--android:layout_height="45dp"-->
    <!--android:layout_below="@+id/login_with_google"-->
    <!--android:layout_centerHorizontal="true"/>-->



    <LinearLayout
        android:id="@+id/button_view_include"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

    </LinearLayout>

</RelativeLayout>